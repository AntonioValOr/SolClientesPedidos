@model ClientesPedidos.ServiceReference1.PedidosEx

@{
    ViewBag.Title = "Eliminar Pedido";
}

<div class="container" style="max-width: 700px; margin-top: 40px;">
    <div class="panel panel-danger">
        <div class="panel-heading text-center">
            <h3 class="panel-title" style="font-size: 22px;">
                <i class="glyphicon glyphicon-trash"></i> Confirmar eliminación
            </h3>
        </div>

        <div class="panel-body">
            <div class="alert alert-warning text-center">
                <strong>Atención:</strong> Esta acción no se puede deshacer.
                ¿Realmente deseas eliminar este pedido?
            </div>

            <dl class="dl-horizontal" style="margin-top: 20px;">
                <dt>Cliente</dt>
                <dd>@ViewBag.NombreCliente</dd>
                <dt>Producto</dt>
                <dd>@ViewBag.NombreProducto</dd>



                <dt>@Html.DisplayNameFor(m => m.Descripcion)</dt>
                <dd>@Html.DisplayFor(m => m.Descripcion)</dd>

                <dt>@Html.DisplayNameFor(m => m.FechaPedido)</dt>
                <dd>@Html.DisplayFor(m => m.FechaPedido)</dd>

                <dt>@Html.DisplayNameFor(m => m.Nota)</dt>
                <dd>@Html.DisplayFor(m => m.Nota)</dd>
            </dl>

            @using (Html.BeginForm("EliminarPost", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.IdP)
                @Html.HiddenFor(m => m.ClientesId)
                @Html.HiddenFor(m => m.Descripcion)
                @Html.HiddenFor(m => m.FechaPedido)
                @Html.HiddenFor(m => m.Nota)

                <div class="text-center" style="margin-top: 30px;">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="glyphicon glyphicon-trash"></i> Eliminar
                    </button>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-default btn-lg">
                        <i class="glyphicon glyphicon-remove"></i> Cancelar
                    </a>
                </div>
            }
        </div>
    </div>
</div>
